<div style="margin:auto; text-align: center;">
  <h2>{{ t "auth.Resend Confirmation" "Resend Confirmation" }}</h2>

  {{$flashes := .Flashes}}
  {{if $flashes}}
    <ul>
      {{range $flash := $flashes}}
        <li>{{$flash.Message}}</li>
      {{end}}
    </ul>
  {{end}}

  <div>
    <form action="{{.AuthURL "password/confirmation/send"}}" method="POST">
      {{ t "auth.Email" "Email" }}:  <input name="email">
      <input type="submit">
    </form>
  </div>

  <div>
    <a href="{{.AuthURL "login"}}">{{ t "auth.Sign in" "Sign in" }}</a>
  </div>
</div>
